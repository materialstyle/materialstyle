{{#> "layouts/layout" }}

  {{#*inline "content"}}
    <h1 class="m-3">Progress Bar</h1>

    <div class="m-3">
      <div class="progress">
        <div class="progress-bar bg-pink" style="width:70%"></div>
      </div>
    </div>

    <div class="m-3">
      <div class="progress">
        <div class="progress-bar bg-pink progress-bar-striped" style="width:70%"></div>
      </div>
    </div>

    <div class="m-3">
      <div class="progress">
        <div class="progress-bar bg-pink progress-bar-striped progress-bar-animated" style="width:70%"></div>
      </div>
    </div>

    <div class="m-3">
      <div class="progress" style="height:5px;">
        <div class="progress-bar bg-pink progress-bar-striped progress-bar-animated"
             style="width:70%; height:20px;"></div>
      </div>
    </div>

    <div class="m-3">
      <div class="progress" style="height: 20px;">
        <div class="progress-bar bg-success" style="width:40%; height: 20px;">
          Success
        </div>
        <div class="progress-bar bg-warning" style="width:10%; height: 20px;">
          Warning
        </div>
        <div class="progress-bar bg-danger" style="width:20%; height: 20px;">
          Danger
        </div>
      </div>
    </div>

    <div class="m-3">
      <div class="progress">
        <div class="progress-bar bg-pink progress-bar-indeterminate"></div>
      </div>
    </div>

    <div class="m-3">
      <div class="progress">
        <div class="progress-bar progress-bar-rainbow">
          <div class="color-bar bg-red"></div>
          <div class="color-bar bg-green"></div>
          <div class="color-bar bg-yellow"></div>
          <div class="color-bar bg-blue"></div>
        </div>
      </div>
    </div>
  {{/inline}}

{{/"layouts/layout"}}
