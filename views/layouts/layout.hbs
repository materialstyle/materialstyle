<!DOCTYPE html>
<html>
<head>
    <title>{{transform htmlWebpackPlugin.options.title}}</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="../dist/css/materialstyle.min.css"/>

    {{#> styles }}{{/styles}}

</head>
<body>

<nav class="navbar navbar-expand-sm bg-deep-purple navbar-dark">
    <div class="container-fluid">
        <div class="d-flex align-items-center">
            <button class="drawer-toggler">
                <span class="drawer-toggler-icon me-2"></span>
            </button>
            <a class="navbar-brand d-flex align-items-center" href="javascript:">
                <img src="https://materialstyle.github.io/assets/images/MSIconNewColorV2.svg" alt="Logo" style="width:40px; height:40px;"> MATERIAL STYLE
            </a>
        </div>
    </div>
</nav>

<section class="d-flex flex-nowrap">
    <aside class="drawer auto-hide drawer-light bg-deep-purple-50">
        <div class="drawer-header bg-deep-purple text-light">
            <a class="drawer-brand text-light d-flex align-items-center" href="javascript:">
                <img src="https://materialstyle.github.io/assets/images/MSIconNewColorV2.svg" alt="Logo" style="width:40px; height:40px;">
                MATERIAL STYLE
            </a>
            <button type="button" class="btn-close btn-close-white drawer-close-btn" aria-label="Close"></button>
        </div>
        <div class="drawer-body">
            <ul class="nav flex-column">
                {{#each htmlWebpackPlugin.options.components}}
                <li class="nav-item">
                    <a class="nav-link" href="/{{this}}.html">
                        {{transform this}}
                    </a>
                </li>
                {{/each}}
            </ul>
        </div>
    </aside>
    <div class="m-container p-2">

        {{#> content }}{{/content}}

    </div>
</section>

{{#> jQuery }}{{/jQuery}}

<script src="../dist/js/materialstyle.min.js"></script>
<script>
    var drawers = [].slice.call(document.querySelectorAll('.drawer'))
    var drawerList = drawers.map(function (drawer) {
        return new materialstyle.Drawer(drawer)
    })
</script>

{{#> scripts }}{{/scripts}}

</body>
</html>
