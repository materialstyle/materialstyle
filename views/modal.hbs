{{#> "layouts/layout" }}

  {{#*inline "content"}}
    <h1 class="m-3">Modal</h1>

    <div class="modal fade" id="myModal">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <h4 class="modal-title">Modal Heading</h4>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>

          <div class="modal-body">
            <div class="m-3">
              <label class="d-block">File input button</label>
              <div class="m-file-input">
                <input type="file" name="myfile">
                <button type="button" class="btn btn-dark btn-file">
                  <i class="bi bi-paperclip"></i> Browse Single
                </button>
                <label class="files"></label>
              </div>
            </div>

            <div class="m-3">
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" value="" id="checkbox5">
                <label class="form-check-label" for="checkbox5">
                  Checkbox
                </label>
              </div>
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" value="" id="checkbox6" checked>
                <label class="form-check-label" for="checkbox6">
                  Checkbox
                </label>
              </div>
            </div>

            <div class="m-3">
              <div class="input-group">
                <div class="form-floating m-text-field">
                  <input type="text" class="form-control" id="firstname"
                         placeholder="firstname" autocomplete="off">
                  <label for="firstname">Firstname</label>
                </div>
                <span class="input-group-text prepend">
                                    <i class="bi bi-person-circle"></i>
                                </span>
              </div>
            </div>

            <div class="m-3">
              <div class="input-group">
                <div class="form-floating form-floating--outlined m-text-field">
                  <input type="email" class="form-control" id="email"
                         placeholder="Email" autocomplete="off">
                  <label for="email">Email</label>
                </div>
                <span class="input-group-text prepend">
                                    <i class="bi bi-person-circle"></i>
                                </span>
              </div>
            </div>

            <div class="m-3">
              <div class="input-group">
                <fieldset class="form-floating m-select">
                  <select class="form-select">
                    <option value=""></option>
                    <option value="1">Option 1</option>
                    <option value="2">Option 2</option>
                    <option value="3">Option 3</option>
                    <option value="4">Option 4</option>
                  </select>
                  <label>Select One</label>
                </fieldset>
                <div class="input-group-text prepend">
                  <i class="bi bi-star-fill"></i>
                </div>
              </div>
            </div>

            <div class="m-3">
              <div class="input-group">
                <fieldset class="form-floating form-floating--outlined m-select">
                  <select class="form-select">
                    <option value=""></option>
                    <option value="1">Option 1</option>
                    <option value="2">Option 2</option>
                    <option value="3">Option 3</option>
                    <option value="4">Option 4</option>
                  </select>
                  <label>Select One</label>
                </fieldset>
                <div class="input-group-text prepend">
                  <i class="bi bi-star-fill"></i>
                </div>
              </div>
            </div>

            <div class="m-3">
              <ul class="nav nav-tabs nav-justified primary-dark accent-indigo">
                <li class="nav-item">
                  <a class="nav-link" data-bs-toggle="tab" href="#apple">Apple</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link active" data-bs-toggle="tab" href="#apricot">Apricot</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" data-bs-toggle="tab" href="#avocado">Avocado</a>
                </li>
              </ul>
              <!-- Tab Panes -->
              <div class="tab-content">
                <div class="tab-pane container-fluid fade" id="apple">Apple</div>
                <div class="tab-pane container-fluid active" id="apricot">Apricot</div>
                <div class="tab-pane container-fluid fade" id="avocado">Avocado</div>
              </div>
            </div>

            <div class="m-3">
              <div class="progress">
                <div class="progress-bar bg-indigo m-progress"></div>
              </div>
            </div>

            <div class="m-3">
              <button type="button" class="btn btn-dark" id="show-modal-snackbar">
                Show Snackbar
              </button>
            </div>

            <div class="m-3">
              <div class="m-shape-container shape-parent-bg-white">
                <button type="button" class="btn btn-dark">
                  Shaped Button
                </button>
                <div class="angle-top-right"></div>
                <div class="angle-bottom-left"></div>
              </div>
            </div>

          </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-dark" data-bs-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>

    <div class="m-3">
      <button type="button" class="btn btn-black" data-bs-toggle="modal" data-bs-target="#myModal">
        Open modal
      </button>
    </div>

    <div class="snackbar snackbar-left" id="modal-snackbar">This is a Snackbar</div>
  {{/inline}}

  {{#*inline "jQuery"}}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  {{/inline}}

  {{#*inline "scripts"}}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
            integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
            crossorigin="anonymous"></script>

    <script>
      $(function () {
        $('.m-file-input').fileinput();

        $('.m-text-field').textfield();
        $('.m-select').selectfield();

        $('.nav-tabs').tab();
        $('.m-shape-container').shape();

        $("#myModal").on('shown.bs.modal', function () {
          $('.m-text-field').textfield('redraw');
          $('.m-select').selectfield('redraw');

          $('.nav-tabs').tab('redraw');

          $('#show-modal-snackbar').on('click', function () {
            $('#modal-snackbar').snackbar();
          });
        });
      })
    </script>
  {{/inline}}

{{/"layouts/layout"}}
