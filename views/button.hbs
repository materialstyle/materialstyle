{{#> "layouts/layout" }}

    {{#*inline "content"}}
        <h1 class="m-3">Button</h1>

        <div class="m-3">
            <label class="d-block">Button</label>
            <button type="button" class="btn btn-deep-purple m-1">
                Default
            </button>
            <button type="button" class="btn btn-deep-purple m-1">
                Icon <i class="bi bi-star-fill"></i>
            </button>
            <button type="button" class="btn btn-deep-purple btn-lg m-1">
                Large
            </button>
            <button type="button" class="btn btn-deep-purple btn-sm m-1">
                Small
            </button>
            <button type="button" class="btn btn-deep-purple m-1" disabled>
                Disabled
            </button>
        </div>

        <div class="m-3">
            <label class="d-block">With Theme Colors</label>
            <button type="button" class="btn btn-primary m-1">
                Primary
            </button>
            <button type="button" class="btn btn-secondary m-1">
                Secondary
            </button>
            <button type="button" class="btn btn-success m-1">
                Success
            </button>
            <button type="button" class="btn btn-danger m-1">
                Danger
            </button>
            <button type="button" class="btn btn-warning m-1">
                Warning
            </button>
            <button type="button" class="btn btn-info m-1">
                Info
            </button>
            <button type="button" class="btn btn-light m-1">
                Light
            </button>
            <button type="button" class="btn btn-dark m-1">
                Dark
            </button>
        </div>

        <div class="m-3">
            <label class="d-block">Button Link</label>
            <button type="button" class="btn btn-link m-1">
                Link
            </button>
        </div>

        <div class="m-3">
            <label class="d-block">Outlined button</label>
            <button type="button" class="btn btn-outline-pink m-1">
                Icon <i class="bi bi-star-fill"></i>
            </button>
            <button type="button" class="btn btn-outline-pink btn-lg m-1">
                Large
            </button>
            <button type="button" class="btn btn-outline-pink btn-sm m-1">
                Small
            </button>
            <button type="button" class="btn btn-outline-pink m-1" disabled>
                Disabled
            </button>
        </div>

        <div class="m-3">
            <label class="d-block">Text button</label>
            <button type="button" class="btn btn-text-green m-1">
                Icon <i class="bi bi-star-fill"></i>
            </button>
            <button type="button" class="btn btn-text-green btn-lg m-1">
                Large
            </button>
            <button type="button" class="btn btn-text-green btn-sm m-1">
                Small
            </button>
            <button type="button" class="btn btn-text-green m-1" disabled>
                Disabled
            </button>
        </div>

        <div class="m-3">
            <label class="d-block">Horizontal button group</label>
            <div class="btn-group m-1">
                <button type="button" class="btn btn-indigo">Button</button>
                <button type="button" class="btn btn-indigo">Button</button>
            </div>
            <div class="btn-group m-1">
                <button type="button" class="btn btn-indigo">
                    Icon <i class="bi bi-star-fill"></i>
                </button>
                <button type="button" class="btn btn-indigo">
                    Icon <i class="bi bi-star-fill"></i>
                </button>
            </div>
            <div class="btn-group m-1">
                <button type="button" class="btn btn-indigo btn-lg">Large</button>
                <button type="button" class="btn btn-indigo btn-lg">Large</button>
            </div>
            <div class="btn-group m-1">
                <button type="button" class="btn btn-indigo btn-sm">Small</button>
                <button type="button" class="btn btn-indigo btn-sm">Small</button>
            </div>
            <div class="btn-group m-1">
                <button type="button" class="btn btn-indigo" disabled>Disabled</button>
                <button type="button" class="btn btn-indigo" disabled>Disabled</button>
            </div>
        </div>

        <div class="m-3">
            <label class="d-block">Vertical button group</label>
            <div class="btn-group-vertical m-1">
                <button type="button" class="btn btn-indigo">Button</button>
                <button type="button" class="btn btn-indigo">Button</button>
            </div>
            <div class="btn-group-vertical m-1">
                <button type="button" class="btn btn-indigo">
                    Icon <i class="bi bi-star-fill"></i>
                </button>
                <button type="button" class="btn btn-indigo">
                    Icon <i class="bi bi-star-fill"></i>
                </button>
            </div>
            <div class="btn-group-vertical m-1">
                <button type="button" class="btn btn-indigo btn-lg">Large</button>
                <button type="button" class="btn btn-indigo btn-lg">Large</button>
            </div>
            <div class="btn-group-vertical m-1">
                <button type="button" class="btn btn-indigo btn-sm">Small</button>
                <button type="button" class="btn btn-indigo btn-sm">Small</button>
            </div>
            <div class="btn-group-vertical m-1">
                <button type="button" class="btn btn-indigo" disabled>Disabled</button>
                <button type="button" class="btn btn-indigo" disabled>Disabled</button>
            </div>
        </div>

        <div class="m-3">
            <label class="d-block">File input button</label>
            <div class="m-file-input m-1">
                <input type="file" name="myfile">
                <button type="button" class="btn btn-dark btn-file">
                    <i class="bi bi-paperclip"></i> Browse Single</button>
                <label class="files"></label>
            </div>

            <div class="m-file-input m-1">
                <input type="file" name="myfiles[]" multiple>
                <button type="button" class="btn btn-dark btn-file">
                    <i class="bi bi-paperclip"></i> Browse Multiple</button>
                <label class="files"></label>
            </div>
        </div>

        <h1 class="mt-4 mx-3">Floating Action Button (FAB)</h1>

        <div class="d-flex align-items-center flex-wrap">
            <div class="p-3 text-center">
                <label class="me-1">Standard</label>
                <button type="button" class="btn btn-fab btn-purple">
                    <i class="bi bi-heart-fill"></i>
                </button>
            </div>

            <div class="p-3 text-center">
                <label class="me-1">Disabled</label>
                <button type="button" class="btn btn-fab btn-purple" disabled>
                    <i class="bi bi-heart-fill"></i>
                </button>
            </div>

            <div class="p-3 text-center">
                <label class="me-1">Mini</label>
                <button type="button" class="btn btn-fab mini-fab btn-purple">
                    <i class="bi bi-heart-fill"></i>
                </button>
            </div>

            <div class="p-3 text-center">
                <label class="me-1">Leaf</label>
                <button type="button" class="btn btn-fab leaf-fab btn-purple">
                    <i class="bi bi-heart-fill"></i>
                </button>
            </div>

            <div class="p-3 text-center">
                <label class="me-1">Leaf Inverted</label>
                <button type="button" class="btn btn-fab leaf-fab-inverted btn-purple">
                    <i class="bi bi-heart-fill"></i>
                </button>
            </div>

            <div class="p-3 text-center">
                <label class="me-1">Extended Fab / Rounded Button</label>
                <button type="button" class="btn btn-purple btn-lg rounded-pill ">
                    <i class="bi bi-heart-fill"></i> Like
                </button>
            </div>
        </div>
    {{/inline}}

    {{#*inline "jQuery"}}
        <!--<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>-->
    {{/inline}}

    {{#*inline "scripts"}}
        <script>
            // Without jQuery
            var buttonList = [].slice.call(document.querySelectorAll('.btn'))
            var rippleList = buttonList.map(function (button) {
                return new materialstyle.Ripple(button)
            })

            var fileInputList = [].slice.call(document.querySelectorAll('.m-file-input'))
            var fileInputs = fileInputList.map(function (button) {
                return new materialstyle.FileInput(button)
            })

            // With jQuery
            // $(function(){
            //   $('.btn').ripple();
            //   $('.m-file-input').fileinput();
            // });
        </script>
    {{/inline}}

{{/"layouts/layout"}}
