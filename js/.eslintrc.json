{
  "extends": "../.eslintrc.json",
  "env": {
    "es2022": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "overrides": [
    {
      "files": [
        "./*.js",
        "./src/**/*.js"
      ],
      "rules": {
        "import/extensions": [
          2,
          {
            "js": "always"
          }
        ]
      }
    }
  ]
}
